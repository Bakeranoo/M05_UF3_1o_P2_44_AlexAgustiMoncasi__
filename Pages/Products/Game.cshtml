@page
@model M05_UF3_P2_Template.Pages.Products.GameModel
@{
}
<form method="post">
    <button type="submit" class="btn btn-primary float-right"><span class="material-icons">save</span></button>
    <div class="card-body">
        <div class="form-row">
            <div class="form-group col-md-5">
                <label for="Game_Rating_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">star</span>Rating</label>
                <input type="number" asp-for="game.Rating" maxlength="50" class="form-control" id="Game_Rating_Input" placeholder="0">
            </div>
            <div class="form-group col-md-5">
                <label for="Game_Version_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">update</span>Version</label>
                <input type="number" asp-for="game.Version" maxlength="50" class="form-control" id="Game_Version_Input" placeholder="0.000">
            </div>
        </div>
    </div>
</form>
